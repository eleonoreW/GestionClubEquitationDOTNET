@model ClubEquitation.Models.Reservation

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NbPersonne" class="control-label"></label>
                <input asp-for="NbPersonne" class="form-control" />
                <span asp-validation-for="NbPersonne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="EstActive" /> @Html.DisplayNameFor(model => model.EstActive)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="UtilisateurId" class="control-label">Utilisateur</label>
                <select asp-for="UtilisateurId" class="form-control" asp-items="ViewBag.UtilisateurId"></select>
                <span asp-validation-for="UtilisateurId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActiviteId" class="control-label">Activite</label>
                <select asp-for="ActiviteId" class="form-control" asp-items="ViewBag.ActiviteId"></select>
                <span asp-validation-for="ActiviteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
